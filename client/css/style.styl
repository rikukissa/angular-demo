@import "./client/css/mixins"

*
  box-sizing border-box
  list-style none
  margin 0
  padding 0
  font-weight normal

html, body
  font 13px 'Helvetica Neue', Helvetica, Arial
  padding 20px

.view-title
  font-size 18px
  margin-bottom 20px
.image-item
  overflow hidden
  padding 5px 0

.image-item-thumbnail
  width 150px
  float left

.image-item-details
  float left
  padding 0 10px

.image-item-title
  font-weight normal
  margin-bottom 5px

.image
  max-width 700px
  margin 30px auto
  display block
.image-title
  margin 10px 0

.comments
  width 700px
  margin auto
.comment-user
  font-weight bold
  margin-right 5px
  &:after
    content: ':'
